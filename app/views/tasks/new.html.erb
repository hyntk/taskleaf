<%= form_with(model: @task, local: true) do |form| %>

<%# notice表示の実装 %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <%= @task.errors.count %>
      <%=t('view.errors are exist!')%>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="task_content">
    <%= form.label :status %>
    <%= form.select :status, ['未着手', '着手中', '完了'], {include_blank: '選択ボックス'}, class: 'task' %>
  </div>

  <div class="task_content">
    <%= form.label :priority %>
    <%= form.text_field :priority %>
  </div>

    <div class="task_content">
    <%= form.label :deadline %>
    <%= form.date_select :deadline %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to t('view.index'), tasks_path %>