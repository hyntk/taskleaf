<h1>管理画面</h1>

<table>
  <tr>
    <th><%= t('view.user_name') %></th>
    <th><%= t('view.user_mailadress') %></th>
    <th><%= t('view.user_created_task_amount') %></th>
  </tr>  

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>
    <td><%= link_to t('view.show'), admin_user_path(user.id) %></td>
    <td><%= link_to t('view.edit'), edit_admin_user_path(user.id) %></td>
    <td><%= link_to t('view.delete'), admin_user_path(user.id), method: :delete %></td>
  </tr>
<% end %>

</table>

